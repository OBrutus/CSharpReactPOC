@model IEnumerable<Category>

<li class="dropdown">
    <a asp-controller="Painting" asp-action="Index" class="dropdown-toggle" data-toggle="dropdown">Paintings<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            <li>
                <a asp-controller="Painting" asp-action="Index"
                   asp-route-category="@category.CategoryName">@category.CategoryName</a>
            </li>

        }
        <li>
            <a asp-controller="Painting" asp-action="Index" asp-route-category="">View All Paintings</a>
        </li>
    </ul>
</li>