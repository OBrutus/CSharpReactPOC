@model Painting

<h2>@Model.Name</h2>

<div class="container">
    <div class="col-md-6">
        <img alt="@Model.Name" src="@Model.ImageUrl" class="img-thumbnail" />
        <div class="caption-full">
            <h3 class="pull-right">@Model.Price</h3>
            <h3>
                @Model.Name
            </h3>
            <h4>@Model.ShortDescription</h4>
            <p>@Model.LongDescription.</p>
            @Model.InStock
        </div>
        <a class="lnk btn btn-success btn-block mt-2" asp-controller="ShoppingCart" asp-action="Index" asp-route-paintingid="@Model.PaintingId">
            Add to Cart
        </a>
    </div>
</div>